{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 style="text-align: center;">Registration</h1>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.username, { attr: { class: 'form-control', placeholder: 'Enter username' }}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email, { attr: { class: 'form-control', placeholder: 'Enter email' }}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.password, { attr: { class: 'form-control', placeholder: 'Enter password' }}) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            {{ form_end(form) }}
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}