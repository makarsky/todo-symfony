{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="page-header">Latest Issues</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Issue</th>
                <th>Due Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for issue in issues %}
                <tr>
                    <th scope="row">{{ issue.id }}</th>
                    <td>{{ issue.name }}</td>
                    <td>{{ issue.dueDate|date('F j, Y, g:i a') }}</td>
                    <td>
                        <a href="{{ path('issue_details', {id : issue.id}) }}" class="btn btn-success">View</a>
                        <a href="{{ path('edit_issue', {id : issue.id}) }}" class="btn btn-default">Edit</a>
                        <a href="{{ path('delete_issue', {id : issue.id}) }}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}